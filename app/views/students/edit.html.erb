<h1>Update A new Student</h1>

<%= form_for @student, local: true do |f| %>
  <div class = "form-group mt-4">
    <%= f.label :name %><br/>
    <%= f.text_field :name %>

    <%= f.label :age %><br/>
    <%= f.text_field :age %>

       <%= f.label :image %><br/>
    <%= f.file_field :image %>
  </div>
<br><%= f.submit "update", class: 'btn btn-primary mt-4' %>
  </div>
<% end %>
<%= link_to 'Back', {:action => 'index'} %>
